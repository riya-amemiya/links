{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "bun@1.3.5",
    "nodejs@24.12.0"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!'"
    ],
    "scripts": {
      "bun:install": "bun install",
      "bun:lint": "bun run lint",
      "bun:test": "bun run test",
      "bun:build": "bun run build"
    }
  }
}
